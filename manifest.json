{
    "manifest_version": 2,

    "name": "CricketNotifier",
    "description": "Desktop notification of fours, sixes and wickets for selected matches",
    "version": "2.2",

    "permissions": [
        "tabs", "http://*/*", "https://*/*", "storage", "notifications"
    ],
    "browser_action": {
        "default_icon" : "cricico.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page" : "popup.html"
    },

    "content_scripts": [
        {
        "matches": ["http://*/*"],
        "js": ["getMatches.js"]
    }
    ]
}
